@model GarageVParrot.ViewModels.EditServiceViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Modifier un service</h2>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

<div class="row">
    <div class="col-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Titre</label>
                <input asp-for="Title" class="form-control" placeholder="Titre"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" name="Image" placeholder="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
