@model GarageVParrot.Models.Review

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

<h2>Valider un témoignage</h2>

<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            @if(User.Identity.IsAuthenticated) {
                <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />
            } 
            <input type="hidden" id="datePublished" name="datePublished" asp-for="datePublished" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label">Nom</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Grade" class="control-label">Note</label>
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @if(User.Identity.IsAuthenticated) {
             <div class="form-group form-check">
                <label class="form-check-label">Valider le témoignange</label>
                 <input class="form-check-input" type="checkbox" asp-for="Accepted"/>
             </div>
            }
            <div class="form-group">
                <input type="submit" value="Envoyer" class="btn" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
