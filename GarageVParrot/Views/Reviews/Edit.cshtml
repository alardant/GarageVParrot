@model GarageVParrot.ViewModels.ReviewViewModel

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

<h2>Valider un témoignage</h2>

<div class="row">
    <div class="col-12">
        <form asp-action="Edit" onsubmit="return VerifyRating()">
            @if (User.Identity.IsAuthenticated)
            {
                <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />
            }
            <input type="hidden" id="datePublished" name="datePublished" asp-for="datePublished" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label">Nom</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div onmouseout="CRateSelected" class="col-md-6">
                    <label asp-for="Rating" class="control-label">Notes</label>
                    <span id="span1" onmouseout="CRateOut(1)" onmouseover="CRateOver(1)" onclick="CRateClick(1)" class="glyphicon glyphicon-star-empty"></span>
                    <span id="span2" onmouseout="CRateOut(2)" onmouseover="CRateOver(2)" onclick="CRateClick(2)" class="glyphicon glyphicon-star-empty"></span>
                    <span id="span3" onmouseout="CRateOut(3)" onmouseover="CRateOver(3)" onclick="CRateClick(3)" class="glyphicon glyphicon-star-empty"></span>
                    <span id="span4" onmouseout="CRateOut(4)" onmouseover="CRateOver(4)" onclick="CRateClick(4)" class="glyphicon glyphicon-star-empty"></span>
                    <span id="span5" onmouseout="CRateOut(5)" onmouseover="CRateOver(5)" onclick="CRateClick(5)" class="glyphicon glyphicon-star-empty"></span>
                </div>
                <div>
                    <input type="hidden" id="lblRating" name="Rating" asp-for="Rating" value="0" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">Valider le témoignange</label>
                    <input class="form-check-input" type="checkbox" asp-for="Accepted" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Valider" class="btn" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script type="text/javascript" src="~/js/starRating.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
