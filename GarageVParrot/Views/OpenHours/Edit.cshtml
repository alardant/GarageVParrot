@model GarageVParrot.Models.OpenHours

@{
    ViewData["Title"] = "Edit";
}

<h2>Modifier les horaires</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MondayOpenHours" class="control-label"></label>
                <input asp-for="MondayOpenHours" class="form-control" />
                <span asp-validation-for="MondayOpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TuesdayOpenHours" class="control-label"></label>
                <input asp-for="TuesdayOpenHours" class="form-control" />
                <span asp-validation-for="TuesdayOpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WednesdayOpenHours" class="control-label"></label>
                <input asp-for="WednesdayOpenHours" class="form-control" />
                <span asp-validation-for="WednesdayOpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThursdayOpenHours" class="control-label"></label>
                <input asp-for="ThursdayOpenHours" class="form-control" />
                <span asp-validation-for="ThursdayOpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FridayOpenHours" class="control-label"></label>
                <input asp-for="FridayOpenHours" class="form-control" />
                <span asp-validation-for="FridayOpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaturdayOpenHours" class="control-label"></label>
                <input asp-for="SaturdayOpenHours" class="form-control" />
                <span asp-validation-for="SaturdayOpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SundayOpenHours" class="control-label"></label>
                <input asp-for="SundayOpenHours" class="form-control" />
                <span asp-validation-for="SundayOpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
